# Application
NODE_ENV=local
PORT=3000
API_VERSION=v1

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=text_analyzer
DATABASE_USERNAME=change_this_username
DATABASE_PASSWORD=change_this_secure_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change_this_redis_password
TEXT_CACHE_TTL=3600
ANALYSIS_CACHE_TTL=86400

# JWT
JWT_SECRET=change_this_to_secure_random_string
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=change_this_to_different_secure_random_string
JWT_REFRESH_EXPIRES_IN=30d

# Logging
LOG_LEVEL=info
LOG_FILE_ENABLED=true

# Throttling
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ELK Stack
ELASTICSEARCH_URL=http://localhost:9200
KIBANA_URL=http://localhost:5601